package Containment;
import java.util.*;
//In java language containment is also know as composition which is a concept of OOP in which 1 class contains the object of another class as a member 
//it represents has-a relationship

//key points of the containment
//1) The class has the another object object
//2) Code Reusability - Instead of Inheriting (You can reuse the functionality of using object of another class)
//3) Flexibility- Easeir to change relationship compared to inheritance
//4) Use in real time Application like Library contains Books / College contains Departments


class Specialist
{
	String c_name;
	int credits;
	Specialist(String c_name,int credits)
	{
	    this.c_name=c_name;
	    this.credits=credits;
	    
	}
	
	void showSpecialist()
	    {
	    	System.out.println("Couses :"+c_name+" | Credits :"+credits);
	    }
}


class Doctors
{
	String p_name;
	List<Specialist> specilist;
	Doctors(String p_name)
	{
		this.p_name=p_name;
		this.courses=new ArrayList();
	}
	
	void showSpecialist(Course c)
	{
	  	courses.add(c);
	}
	
	void showProfessor()
	{
		 System.out.println("Professors :"+p_name);
		  for( Course cour: courses)
		 {
			 cour.showCourses();
		 }
	}
}


class Department
{
     String	d_name;
     List<Professor> professors;
	 Department(String d_name)
	 {
		this.d_name=d_name;
		this.professors=new ArrayList();
	 }
	 void addProfessors(Professor p)
	{
	  	professors.add(p);
	}
	 
	 void showDepartment()
	 {
		 System.out.println("Depatment :"+d_name);
		 for(Professor pro:professors)
		 {
			 pro.showProfessor();
		 }
	 }
}


class Hospitals
{
	String u_name;
	List<Department> department;
    Hospitals(String u_name)
   {
	   this.u_name=u_name;
	   this.department=new ArrayList();
   }
   void addDepartment(Department d)
   {
	department.add(d);   
   }
   
   void showHospitals()
   {
	   System.out.println("Hospitals Name :" +u_name);
	   for(Department dep : department)
	   {
		   dep.showDepartment();
	   }
   }
}

public class Containment {

	
	public static void main(String[] args) {
	
		//create the courses
         Specialist  jape=new Specialist("Jape Hospital",4);
         Specialist	unde=new Specialist("Unde Hospital ",3);
         Specialist	phakde=new Specialist("Phadke Hospital",5);
         Specialist	khanna=new Specialist("Khanna Hospital",5);
         Specialist	sanjivani=new Specialist("Sanjivani Hospital",4);
         Specialist	Indra=new Specialist("Indra Hospital",4);
         Specialist	Himaliya=new Specialist("Himaliya Hospital",3);
         Specialist	Manne=new Specialist("Manne Hospital",5);
         
         
         //create Professors and assigned courses         
         Doctors pf1=new Doctors("Dr..S.A Shivakar");
         pf1.showSpecialist(java);
         pf1.showSpecialist'(ml);
         pf1.showSpecialist'(phy);
         Doctors pf2=new Doctors("Dr.Bhambre");
         pf2.showSpecialist'(ds);
         pf2.showSpecialist'(ai);
         pf2.showSpecialist'(chem);
         pf2.showSpecialist'(maths);
         Doctors pf3=new Doctors("Dr.Houle");
         pf3.showSpecialist'(dbms);
         pf3.showSpecialist'(ai);
         
         //create Departments and assigned professors
         Department cs=new Department("Computer Science Department");
         cs.addProfessors(pf1);
         cs.addProfessors(pf2);
         Department it=new Department("Information Technology Department");
         it.addProfessors(new Professor("Prof.Varma"));
         //This is new professor with no courses 
         Department aids=new Department("Artificial Intelligence & Data Science Department");
         aids.addProfessors(pf2);
         
         //create Universities and assigned departments
         
         Hospitals u1=new Hospitals("Pune University");
         u1.addDepartment(cs);
         u1.addDepartment(it);
         Hospitals u2=new Hospitals("Mumbai University");
         u2.addDepartment(aids);
         
         u1.showHospitals();
         u2.showHospitals();
    

}
}
