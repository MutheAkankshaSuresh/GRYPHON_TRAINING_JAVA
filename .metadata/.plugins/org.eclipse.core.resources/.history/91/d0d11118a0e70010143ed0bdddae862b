package Bank;

 class Sync implements Runnable
{
    String name;
    int money;
    static int avail_bank_balance = 5000;   

    Sync(String name, int money)
    {
        this.name = name;
        this.money = money;
    }

    public void run()
    {
        
      

        synchronized(this)
       {
            if(avail_bank_balance >= money)
            {
                avail_bank_balance -= money;
                System.out.println(name + " ticket granted");
            }
            else
            {
                System.out.println(name +" ticket not granted. Available: " + avail_bank_balance);
            }
        }

        
      
    }
}

public class Bank
{
    public static void main(String[] args)
    {
        Sync s1 = new Sync("UserA", 2000);
        Sync s2 = new Sync("UserB", 2000);
        Sync s3 = new Sync("UserC", 2000);
        Sync s4 = new Sync("UserD", 2000);

        Thread t1 = new Thread(s1);
        Thread t2 = new Thread(s2);
        Thread t3 = new Thread(s3);
        Thread t4 = new Thread(s4);

        t1.start();
        t2.start();
        t3.start();
        t4.start();
    }
}
