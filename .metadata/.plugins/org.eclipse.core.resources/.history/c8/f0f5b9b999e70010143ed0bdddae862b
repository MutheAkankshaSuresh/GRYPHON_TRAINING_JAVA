
package Synchronized_block;
import java.util.Scanner;
import java.lang.*;

class Sync extends Thread
{
	String name;
	int ticket;
	int avail_ticket=10;
	Sync(String name,int ticket)
	{
	  this.name=name;
	  this.ticket=ticket;
	}
	
	public void run()
	{
		String name=Thread.currentThread().getName();
		synchronized(this)
		{
			for(int i=1;i<=3;i++)
			{
			System.out.println("Hello "+name);
			}
			if(avail_ticket>=ticket)
			{
				avail_ticket=avail_ticket-ticket;
				System.out.println("The ticket is granted !!Congoo");
				
			}
			else
			{
				System.out.println("The ticket is not granted !! as avilable tickets are only "+avail_ticket);
			}
			for(int i=1;i<=3;i++)
			{
			System.out.println("Bye "+name);
			}
//			avail_ticket=avail_ticket-ticket;
//			if(avail_ticket>=)
			
			
		}
	}
	
}
public class Synchronized_block {

	

		
	public static void main(String[] args) {
		
     Sync s1=new Sync("UserA",6);
     Sync s2=new Sync("UserB",7);
     Thread t1=new Thread(s1);
     Thread t2=new Thread(s2);
     t1.start();
     t2.start();
     
	}

}
